set number relativenumber
set idearefactormode=keep
set ideajoin
set surround
set easymotion
let mapleader=" "
" Show a few lines of context around the cursor. Note that this makes the
" text scroll if you mouse-click near the start or end of the window.
set scrolloff=5

" Do incremental searching.
set incsearch
set hlsearch
" Don't use Ex mode, use Q for formatting.
map Q gq

set ideajoin
set ideaput
set ideamarks
set encoding=utf-8

set clipboard+=unnamedplus

vmap <C-c> y
vmap <C-v> p
imap <C-v> <esc>pa
map <S-C-v> p

" Map \r to the Reformat Code action
:map \r <Action>(ReformatCode)

" Map <leader>d to start debug
:map <leader>d <Action>(Debug)

" Map \b to toggle the breakpoint on the current line
:map \b <Action>(ToggleLineBreakpoint)

map <leader><cr> :noh<cr>
nmap 0 _
map <leader>gd <Action>(GotoImplementation)
map [g <Action>(GotoPreviousError)
map ]g <Action>(GotoNextError)
" actions
nmap <leader>h <action>(PreviousTab)
nmap <leader>l <action>(NextTab)
nmap <leader>bd <action>(CloseEditor)
nmap <leader>i <action>(Generate)
nmap <leader>m <action>(Git.Menu)
nmap <leader>s <action>(QuickChangeScheme)
nmap <leader>/ <action>(ShowErrorDescription)
nmap <leader>e <action>(GotoNextError)
map <C-o> <action>(Back)
map <C-i> <action>(Forward)
nnoremap <leader><leader> <C-Tab>





# Plugins
Plug 'easymotion/vim-easymotion'
map f <Plug>(easymotion-bd-wl)
map F <Plug>(easymotion-bd-fl)


map t <Plug>(easymotion-bd-w)
map T <Plug>(easymotion-bd-f2)

Plug 'tpope/vim-surround'
Plug 'terryma/vim-multiple-cursors'
Plug 'vim-scripts/argtextobj.vim'
let g:argtextobj_pairs="(:),{:},<:>"

Plug 'tommcdo/vim-exchange'
Plug 'machakann/vim-highlightedyank'
Plug 'michaeljsmith/vim-indent-object'
Plug 'vim-matchit'

